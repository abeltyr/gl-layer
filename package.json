{
  "name": "gl-layer",
  "version": "0.1.0",
  "type": "module",
  "description": "A lightweight WebGL setup layer that simplifies renderer management, uniform handling, and cleanup.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
