    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.12",
    "jest": "^29.7.0",
    "rollup": "4.37.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "29.3.0",
    "tslib": "^2.8.1",
    "typescript": "5.8.2"
